---
export const prerender = true;
import '../styles/global.css';
// Ch1 experiments
import PromptMorphAnimation from '../components/lab/PromptMorphAnimation';
import TokenFlowCanvas from '../components/lab/TokenFlowCanvas';
import BuildingBlocksAssembly from '../components/lab/BuildingBlocksAssembly';
// Ch2 experiments
import SocraticTree from '../components/lab/SocraticTree';
import ChainOfThoughtSteps from '../components/lab/ChainOfThoughtSteps';
// Ch3 experiments
import ContextWindowFill from '../components/lab/ContextWindowFill';
import TokenRain from '../components/lab/TokenRain';
// Ch4 experiments
import AIConstellationMap from '../components/lab/AIConstellationMap';
// Ch5 experiments
import AgentLoopCycle from '../components/lab/AgentLoopCycle';
// Ch6 experiments
import MultiAgentHandoff from '../components/lab/MultiAgentHandoff';
// Ch7 experiments
import TerminalFlow from '../components/lab/TerminalFlow';
// Ch8 experiments
import DecompositionTree from '../components/lab/DecompositionTree';
// Ch9 experiments
import HallucinationDetector from '../components/lab/HallucinationDetector';
// Ch10 experiments
import HumanAISpectrum from '../components/lab/HumanAISpectrum';

const experiments = [
  { num: '01', title: 'Prompt Morph', chapter: 'Ch 1', color: 'text-accent-red/60', desc: 'Watch a vague prompt transform into a precise one, building block by building block.', tech: 'CSS transitions with staggered segment reveals. Colors map to the five prompt building blocks.' },
  { num: '02', title: 'Building Blocks Assembly', chapter: 'Ch 1', color: 'text-accent-red/60', desc: 'The five prompt building blocks fly from scattered positions into an assembled stack.', tech: 'SVG with cubic-bezier easing for a bounce-settle effect. Connection dots and bracket label on completion.' },
  { num: '03', title: 'Token Flow', chapter: 'Ch 1', color: 'text-accent-red/60', desc: 'A particle system showing tokens streaming into an AI core and responses flowing back out.', tech: 'Canvas2D with requestAnimationFrame. Quadratic bezier curves with randomized offsets. Warm in, cool out.' },
  { num: '04', title: 'Socratic Question Tree', chapter: 'Ch 2', color: 'text-navy/60', desc: 'A branching tree shows how one vague goal splits into clarifying questions, answers, and a rich result.', tech: 'SVG with bezier connection paths. Nodes reveal sequentially — questions, then answers, then assembled result.' },
  { num: '05', title: 'Chain of Thought', chapter: 'Ch 2', color: 'text-navy/60', desc: 'Step-by-step reasoning unfolds for a math problem, then contrasts with a one-shot answer.', tech: 'DOM-based card animation with staggered slide-ins. Confidence bars compare CoT vs. direct answers.' },
  { num: '06', title: 'Context Window', chapter: 'Ch 3', color: 'text-purple/60', desc: 'A glass cylinder fills with message blocks and overflows — old messages fade away as new ones arrive.', tech: 'SVG container with proportional token blocks. System prompt pinned at top. Fill bar and token counter.' },
  { num: '07', title: 'Token Rain', chapter: 'Ch 3', color: 'text-purple/60', desc: 'Sentences break apart into tokens that fall like digital rain into a token buffer.', tech: 'Canvas2D particle system. Subword tokenization shown visually. Sine-wave drift and stacking buffer.' },
  { num: '08', title: 'AI Constellation Map', chapter: 'Ch 4', color: 'text-sky/60', desc: 'A starfield of AI tools organized into constellation clusters — image, video, audio, research, coding.', tech: 'Canvas2D on dark background. Twinkling stars, nebula glows, constellation lines. Clusters cycle active states.' },
  { num: '09', title: 'Agent Loop', chapter: 'Ch 5', color: 'text-amber/60', desc: 'The Observe → Think → Act → Evaluate cycle spins continuously as a pulse travels the loop.', tech: 'SVG circular layout with glowing pulse dot. Action descriptions appear at each node. Loop counter in center.' },
  { num: '10', title: 'Multi-Agent Handoff', chapter: 'Ch 6', color: 'text-accent-red/60', desc: 'Three specialist agents — Researcher, Writer, Editor — pass work through a pipeline.', tech: 'Three-lane layout with bezier document transfer animations. Lines simulate notes, drafts, and edits.' },
  { num: '11', title: 'Terminal Flow', chapter: 'Ch 7', color: 'text-purple/60', desc: 'A simulated terminal types out a Claude Code session: specify, generate, verify, fix, verify.', tech: 'Dark terminal with typewriter effect. Syntax-highlighted code, blinking cursor, phase progress bar.' },
  { num: '12', title: 'Decomposition Tree', chapter: 'Ch 8', color: 'text-navy/60', desc: 'A big task breaks into a tree of subtasks with handoff connections between branches.', tech: 'SVG tree with animated bezier branches. Nodes reveal level by level. Checkmarks and handoff arrows appear.' },
  { num: '13', title: 'Hallucination Detector', chapter: 'Ch 9', color: 'text-accent-red/60', desc: 'AI text types out, then a scanner sweeps through revealing which statements are hallucinated.', tech: 'DOM typewriter with scanning overlay. Correct vs. hallucinated annotations. Accuracy gauge and tips.' },
  { num: '14', title: 'Human–AI Spectrum', chapter: 'Ch 10', color: 'text-teal/60', desc: 'Skills slide along a spectrum from "AI excels" to "uniquely human" — the middle is where it gets interesting.', tech: 'SVG with animated pill badges. Color interpolation based on position. Bracket highlights the AI-assisted zone.' },
];
